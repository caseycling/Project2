<!-- user input of burgers to eat --> 
<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8 enter_section">
            <h2>Please write down your credentials</h2>
            <form action="/username/create" method="POST">
                <input type="text" name="burger_name" class="form-control" value="" id="enter-text">
                <br>
                <button type="submit" class="btn btn-default" id="text-enter-button">SUBMIT</button>
            </form>
            <br>
        </div>
        <div class="col-md-2"></div>
    </div>
</div> 

<!-- column titles -->
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h4>Burgers You Want to Eat</h4>

                {{#each burger_data}}
                {{#unless this.devoured}}
                    <input class="form-control" type="text" placeholder="{{ this.id }}. {{ this.burger_name }}" readonly>
                {{/unless}}
                {{/each}}
        </div>        
        <div class="col-md-4">
            {{#each burger_data}}
            {{#unless this.devoured}}
                <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                    <input type="hidden" name="burger_id" type="text" value={{ this.id }}>
                    <br>
                    <button type="submit" class="btn btn-default">Nom Nom!</button>
                </form>
                {{/unless}}
                {{/each}}
        </div>
        <div class="col-md-4">
            <h4>Burgers You've Eaten</h4>

                {{#each burger_data}}
                {{#if this.devoured}}

                    <input class="form-control" type="text" placeholder="{{this.id}}.  {{this.burger_name}}" readonly>

                {{/if}}
                {{/each}}
        </div>
    </div>
</div>